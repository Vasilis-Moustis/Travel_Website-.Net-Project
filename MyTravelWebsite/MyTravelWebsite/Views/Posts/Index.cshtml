@model IEnumerable<MyTravelWebsite.Models.Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Posts</h2>
<br />
@using (Html.BeginForm("ShowSearchPost", "Posts", FormMethod.Get))
{
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-btn">
                        <label for="SearchPhrase">Search: </label>
                        <input type="text" class="form-control" id="search" name="SearchPhrase" onblur="this.value=removeSpaces(this.value);" required placeholder="User Email" />
                        <input type="submit" value="Search" class="btn btn-success" />
                        <button class="btn" type="reset" style="background-color: #006600; left:30px">
                            @Html.ActionLink("Create New", "Create")
                        </button>
                    </span>
                </div>
            </div>
        </div>
    </div>
}
<br />
<br />
<table class="table table-bordered table-hover">
    <thead>
        <tr class="btn-primary">
            <th>
                @Html.DisplayNameFor(model => model.user)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.content)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody style="background-color:white">
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.user)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.content)
            </td>
            @if (User.IsInRole("SuperAdmin") || User.IsInRole("Travel Organizer"))
            {
                <td>

                    <button class="btn" type="reset" style="background-color: #cc7a00">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    </button> |
                    <button class="btn" type="reset" style="background-color: #ffff4d">
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </button> |
                    <button class="btn btn-danger" type="reset">
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </button>

                </td>
            }
            else
            {
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-warning" })  
                </td>
            }
            </tr>
        }
    </tbody>
</table>
