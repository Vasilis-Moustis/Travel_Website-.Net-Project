
@{
    ViewBag.Title = "CreateUser";
}
<br />
<h2>CreateUser</h2>
<br />
@using (Html.BeginForm("CreateUser", "Admin", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-4">
            <label class="control-label">User Name</label>
            <input type="text" name="textEmail" class="form-control" placeholder="Enter Email" required />
        </div>
        <br />
        <div class="col-md-4">
            <label class="control-label">User Fullname</label>
            <input type="text" name="textName" class="form-control" placeholder="Enter Fullname" required />
        </div>
        <br />
        <div class="col-md-4">
            <label class="control-label">Password</label>
            <input type="password" name="textPass" class="form-control" required />
        </div>
        <br />
    </div>
    <br />
    <div>
        <button type="submit" value="Submit" class="btn btn-success">Save</button>
        <button class="btn btn-danger" type="reset" style="color:white">@Html.ActionLink("Cancel", "Index")</button>
    </div>
}