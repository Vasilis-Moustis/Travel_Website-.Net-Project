@model IEnumerable<MyTravelWebsite.Models.Event>

@{
    ViewBag.Title = "Index";
}
<br />
<h2>Events</h2>
<br />
@if (User.IsInRole("SuperAdmin") || User.IsInRole("Travel Organizer"))
{
    <button class="btn" type="reset" style="background-color: #006600">
        @Html.ActionLink("Create New", "Create")
    </button>
}
<br />
<br />
<table class="table table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Place)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Company)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Duration)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Notes)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Place)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Company)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Date)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Duration)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Notes)
        </td>
        @if (User.IsInRole("SuperAdmin") || User.IsInRole("Travel Organizer"))
        {
            <td>
                <button class="btn" type="reset" style="background-color: #cc7a00">
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                </button> |
                <button class="btn" type="reset" style="background-color: #ffff4d">
                    @Html.ActionLink("Details", "Details", new { id = item.Id })
                </button> |
                <button class="btn btn-danger" type="reset">
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </button>
            </td>
        }
    </tr>
}

</table>
