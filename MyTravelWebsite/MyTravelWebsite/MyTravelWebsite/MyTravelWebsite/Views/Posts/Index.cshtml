@model IEnumerable<MyTravelWebsite.Models.Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Posts</h2>
<br />
<button class="btn" type="reset" style="background-color: #006600">
        @Html.ActionLink("Create New", "Create")
</button>
<br />
<br />
<table class="table table-bordered table-hover">
    <tr class="btn-primary">
        <th>
            @Html.DisplayNameFor(model => model.user)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.content)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.user)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.content)
            </td>
            @if (User.IsInRole("SuperAdmin") || User.IsInRole("Travel Organizer"))
            {
        <td>

            <button class="btn" type="reset" style="background-color: #cc7a00">
                @Html.ActionLink("Edit", "Edit", new { id = item.Id })
            </button> |
            <button class="btn" type="reset" style="background-color: #ffff4d">
                @Html.ActionLink("Details", "Details", new { id = item.Id })
            </button> |
            <button class="btn btn-danger" type="reset">
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </button>

        </td>
     }
        </tr>
}

</table>
