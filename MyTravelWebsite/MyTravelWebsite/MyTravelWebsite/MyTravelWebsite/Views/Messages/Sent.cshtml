@model IEnumerable<MyTravelWebsite.Models.Messages>
@using Microsoft.AspNet.Identity

@{
    ViewBag.Title = "Sent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Sent</h2>
<p>
    <div class="btn btn-success">@Html.ActionLink("Create New", "Create", "Messages")</div> 
    <div class="btn btn-default">@Html.ActionLink("Inbox", "Index", "Messages")</div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.sender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.recipient)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (Request.IsAuthenticated && User.Identity.GetUserName() == item.sender)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.sender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.recipient)
                </td>
                <td>
                    <div class="btn btn-info">@Html.ActionLink("Details", "Details", new { id = item.Id })</div> 
                    <div class="btn btn-danger">@Html.ActionLink("Delete", "Delete", new { id = item.Id })</div> 
                </td>
            </tr>
        }
    }

</table>
