@model IEnumerable<MyTravelWebsite.Models.Messages>
@using Microsoft.AspNet.Identity
@{
    ViewBag.Title = "Sent";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<h2>Messages</h2>
<br />
<p>
    <div class="btn" style="background-color:forestgreen"> @Html.ActionLink("Create New", "Create", "Messages")</div>
    <div class="btn" style="background-color:palevioletred"> @Html.ActionLink("Sent Message", "Sent", "Messages")</div>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.sender)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.recipient)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        if (Request.IsAuthenticated && User.Identity.GetUserName() == item.recipient)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.sender)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.recipient)
                </td>
                <td>
                    <button class="btn" type="reset" style="background-color: #cc7a00">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                    </button> |
                    <button class="btn" type="reset" style="background-color: #ffff4d">
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </button> |
                    <button class="btn btn-danger" type="reset">
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                    </button>
                </td>
            </tr>
        }
    }

</table>
